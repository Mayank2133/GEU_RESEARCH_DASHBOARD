{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node",
      "config": {
        "includeFiles": [
          "public/**",
          "uploads/**",
          "submissions/**",
          "models/**"
        ]
      }
    }
  ],
  "routes": [
    
    {
      "src": "/api/(.*)",
      "dest": "server.js",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    },
   
    {
      "src": "/uploads/(.*)",
      "dest": "server.js"
    },
    
    {
      "src": "/login",
      "dest": "/public/login.html",
      "headers": {
        "Cache-Control": "public, max-age=3600"
      }
    },
    {
      "src": "/register",
      "dest": "/public/register.htm"
    },
    {
      "src": "/staff-dashboard",
      "dest": "/public/staff-dashboard.html"
    },
    
    {
      "src": "/(.*)",
      "dest": "/public/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000"
      }
    },
    
    {
      "src": "/(.*)",
      "dest": "/public/index.html",
      "status": 200
    }
  ]
}